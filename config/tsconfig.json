{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "../",
    "outDir": "../dist"
  },
  "include": [
    "../app.ts",
    "../src/**/*.ts"
  ],
  "exclude": ["../node_modules"]
}

